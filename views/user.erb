<ul class="list-group">
  <li class="list-group-item new-payment">
    <h4 id="new-payment-button" class="list-group-item-heading">Add Payment</h4>
    <form id="new-payment-form" class="form-horizontal" method="POST" action="/new_payment">
      <fieldset>
        <legend>Create New Payment</legend>
        <div class="form-group">
          <div class="col-lg-10">
            <select class="form-control" id="select" name="group_id">
              <% @user.groups.where(active:true).each do |g| %>
                <option value="<%= g.id %>"><%= g.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10">
            <label for="inputPaymentName" class="control-label">Name</label>
            <input type="text" class="form-control" id="inputPaymentName" placeholder="Payment Name" name="name">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10">
            <label for="inputDueDate" class="control-label">Due</label>
            <input type="text" class="form-control" id="inputDueDate" placeholder="Payment Due" name="due">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10">
            <label for="inputAmount" class="control-label">Amount</label>
            <input type="text" class="form-control" id="inputAmount" placeholder="Payment Amount" name="amount">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button class="btn btn-default cancel-user">Cancel</button>
          </div>
        </div>
      </fieldset>
    </form>
  </li>
  <% @user.groups.where(active:true).each do |g| %>
  <li class="list-group-item group">
    <h3 class="list-group-item-heading"><%= g.name %> <span class="payment-size payment-amount badge"><%= g.payments.size %> bill(s)</span></h4>
    <div class="groupInfo">
      <% if g.payments.empty? %>
        <p>There are no payments for this group</p>
      <% else %>
        <% g.payments.each do |p| %>
          <h5 class="list-group-item-heading payment-name"><%= p.name %></h5><span class="payment-amount badge"><%= p.amount %></span>
          <p class="payment-due">Due: <%= p.due %></p>
        <% end %>
      <% end %>
      <a href="delete?type=g&id=<%= g.id %>"><button class="delete-group">Delete</button></a>
      <a href=""><button class="edit-group">Edit</button></a>
    </div>
  </li>
  <% end %>
  <li class="list-group-item new-group">
    <h4 id="new-group-button" class="list-group-item-heading">Add New Group</h4>
    <form id="new-group-form" class="form-horizontal" method="POST" action="/new_group">
      <fieldset>
        <legend>Create New Group</legend>
        <div class="form-group">
          <label for="inputGroupName" class="col-lg-2 control-label">Name</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" id="inputGroupName" placeholder="Group Name" name="name">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button class="btn btn-default cancel-user">Cancel</button>
          </div>
        </div>
      </fieldset>
    </form>
  </li>
</ul>
